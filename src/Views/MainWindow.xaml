                        <DataTrigger Binding="{Binding IsDisplayBlockPointInfomation.Value}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimationUsingKeyFrames BeginTime="0:0:0.1" Storyboard.TargetProperty="Margin">
                                            <SplineThicknessKeyFrame KeyTime="0:0:0" Value="0,530,0,0" />
                                            <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="0,445,0,0" />
                                        </ThicknessAnimationUsingKeyFrames>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="100"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimationUsingKeyFrames BeginTime="0:0:0.1" Storyboard.TargetProperty="Margin">
                                            <SplineThicknessKeyFrame KeyTime="0:0:0" Value="0,445,0,0" />
                                            <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="0,530,0,0" />
                                        </ThicknessAnimationUsingKeyFrames>
                                        <DoubleAnimation
                                            BeginTime="0:0:0.3"
                                            Storyboard.TargetProperty="Opacity"
                                            From="100"
                                            To="0"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>

        <!--  セットごとの点数  -->
        <Grid
            Width="600"
            Margin="0,0,0,100"
            Opacity="100">
            <Grid.RenderTransform>
                <ScaleTransform x:Name="PointParSet" CenterY="600" ScaleY="0" />
            </Grid.RenderTransform>

            <DataGrid
                Name="dataGrid"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                AutoGenerateColumns="False"
                Background="White"
                BorderBrush="White"
                BorderThickness="1"
                CanUserAddRows="False"
                GridLinesVisibility="None"
                HeadersVisibility="None"
                HorizontalScrollBarVisibility="Disabled"
                IsReadOnly="True"
                ItemsSource="{Binding PointParSetSource.Value}"
                SelectionChanged="dataGrid_SelectionChanged"
                VerticalScrollBarVisibility="Disabled">



                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Height" Value="50" />
                        <!--<Setter Property="Width" Value="20" />-->

                        <Setter Property="BorderThickness" Value="1.5,3,1.5,0" />
                        <Setter Property="BorderBrush" Value="White" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Left}"
                        FontSize="25"
                        FontWeight="DemiBold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLeftWin}" Value="true">
                                        <Setter Property="Background" Value="#fd5644" />
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>

                                <Setter Property="Foreground" Value="#fd5644" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="Padding" Value="20" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Right}"
                        FontSize="25">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRightWin}" Value="true">
                                        <Setter Property="Background" Value="#fd5644" />
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>

                                <Setter Property="Foreground" Value="#fd5644" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="Padding" Value="20" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="54" />
                <ColumnDefinition Width="54" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--  IsDisplayPointParSet  -->
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDisplayPointParSet.Value}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.ScaleY"
                                            From="0"
                                            To="1"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.ScaleY"
                                            From="1"
                                            To="0"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>

        <!--  スコア  -->
        <Grid
            Width="600"
            Height="50"
            Margin="0,525,0,0"
            Background="#2e30ac">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="0" Fill="{Binding ColorCodeLeftTeam.Value}" />
            <Rectangle Grid.Column="7" Fill="{Binding ColorCodeRightTeam.Value}" />
            <Rectangle Grid.Column="3" Fill="#fd5644" />
            <Rectangle Grid.Column="4" Fill="#fd5644" />

            <Border
                Grid.ColumnSpan="9"
                BorderBrush="White"
                BorderThickness="3" />
            <Border
                Grid.Column="1"
                BorderBrush="White"
                BorderThickness="0,0,1.5,0" />
            <Border
                Grid.Column="2"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="3"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="4"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="5"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="6"
                BorderBrush="White"
                BorderThickness="1.5,0,0,0" />

            <TextBlock
                Grid.Column="1"
                Margin="0,3,10,10"
                HorizontalAlignment="Right"
                FontSize="25"
                Foreground="White"
                Text="●" />
            <TextBlock
                Grid.Column="6"
                Margin="10,3,0,10"
                HorizontalAlignment="Left"
                FontSize="25"
                Foreground="White"
                Text="●" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding TeamLeft.Value}" />
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding SetLeft.Value}" />
            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding PointLeft.Value}" />

            <TextBlock
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding PointRight.Value}" />
            <TextBlock
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding SetRight.Value}" />
            <TextBlock
                Grid.Column="6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding TeamRight.Value}" />

            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAnimation.Value}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            From="0"
                                            To="600"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            BeginTime="0:0:0.2"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="100"
                                            Duration="0:0:30" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            From="600"
                                            To="0"
                                            Duration="0:0:0.2" />
                                        <DoubleAnimation
                                            BeginTime="0:0:0.4"
                                            Storyboard.TargetProperty="Opacity"
                                            From="100"
                                            To="0"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>

        <!--  セット数  -->
        <Grid
            Width="600"
            Height="50"
            Margin="0,525,0,0"
            Background="#2e30ac"
            Opacity="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="0" Fill="{Binding ColorCodeLeftTeam.Value}" />
            <Rectangle Grid.Column="6" Fill="{Binding ColorCodeRightTeam.Value}" />

            <Border
                Grid.ColumnSpan="6"
                BorderBrush="White"
                BorderThickness="3" />
            <Border
                Grid.Column="1"
                BorderBrush="White"
                BorderThickness="0,0,1.5,0" />
            <Border
                Grid.Column="2"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="3"
                BorderBrush="White"
                BorderThickness="1.5,0,1.5,0" />
            <Border
                Grid.Column="4"
                BorderBrush="White"
                BorderThickness="1.5,0,0,0" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding TeamLeft.Value}" />
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding SetLeft.Value}" />
            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding SetRight.Value}" />
            <TextBlock
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="{Binding TeamRight.Value}" />

            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDisplayGetSet.Value}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            BeginTime="0:0:0"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="1"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            BeginTime="0:0:0"
                                            Storyboard.TargetProperty="Opacity"
                                            From="1"
                                            To="0"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>
    </Grid>
</Window>
